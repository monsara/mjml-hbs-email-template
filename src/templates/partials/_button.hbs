<mj-button
  {{#if mj-class}}mj-class="{{mj-class}}"{{/if}}
  {{#if css-class}}mj-class="{{css-class}}"{{/if}}
  {{#if align}}align="{{align}}"{{/if}}
  {{#if background-color}}background-color="{{background-color}}"{{/if}}
  {{#if border}}border="{{border}}"{{/if}}
  {{#if border-bottom}}border-bottom="{{border-bottom}}"{{/if}}
  {{#if border-left}}border-left="{{border-left}}"{{/if}}
  {{#if border-radius}}border-radius="{{border-radius}}"{{/if}}
  {{#if border-right}}border-right="{{border-right}}"{{/if}}
  {{#if border-top}}border-top="{{border-top}}"{{/if}}
  {{#if color}}color="{{color}}"{{/if}}
  {{#if container-background-color}}container-background-color="{{container-background-color}}"{{/if}}
  {{#if font-family}}font-family="{{font-family}}"{{/if}}
  {{#if font-size}}font-size="{{font-size}}"{{/if}}
  {{#if font-style}}font-style="{{font-style}}"{{/if}}
  {{#if font-weight}}font-weight="{{font-weight}}"{{/if}}
  {{#if height}}height="{{height}}"{{/if}}
