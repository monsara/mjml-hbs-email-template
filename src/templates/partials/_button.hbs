  {{#if rel}}rel="{{rel}}"{{/if}}
  {{#if target}}target="{{target}}"{{/if}}
  {{#if text-align}}text-align="{{text-align}}"{{/if}}
  {{#if text-decoration}}text-decoration="{{text-decoration}}"{{/if}}
  {{#if text-transform}}text-transform="{{text-transform}}"{{/if}}
  {{#if title}}title="{{title}}"{{/if}}
  {{#if vertical-align}}vertical-align="{{vertical-align}}"{{/if}}
  {{#if width}}width="{{width}}"{{/if}}
