<mj-section 
  padding-top="{{fluid-section-padding}}"
  padding-left="{{fluid-section-padding}}"
  padding-right="{{fluid-section-padding}}"
  padding-bottom="{{spacing-small}}"
  background-color="{{email-bg-color}}"
>
  <mj-column>
    <mj-text 
      mj-class="text text-bold padding-bottom" 
      font-size="32px" 
      line-height="42px" 
      color="{{color-7}}"
    >
      {{title}}
    </mj-text>

    <mj-text 
      mj-class="text text-bold padding-bottom" 
      line-height="20px" 
      color="{{color-7}}"
    >
      Шановна {{ recipientName }},
    </mj-text>
  </mj-column>
</mj-section>