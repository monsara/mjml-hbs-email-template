          <mj-include path="./partials/license.mjml" />

          <!-- Best Regards Text -->
          <mj-include path="./partials/best-regards.mjml" />
        </mj-column>
      </mj-section>

      <!-- Warning Text -->
      <mj-include path="./partials/warning.mjml" />
    </mj-wrapper>

    <!-- Warning Block With License-->
    <mj-include path="./partials/warning-license.mjml" />

