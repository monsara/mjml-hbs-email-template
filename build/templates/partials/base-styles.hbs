<!-- CSS Variablels -->
<mj-include path="./variables.mjml" />

<mj-attributes>
  <mj-text font-family="&#x27;Raleway&#x27;, Helvetica, Arial, sans-serif" />

  <mj-class name="text" padding="0" />

  <mj-class name="text-base" font-weight="regular" font-size="var(--base-font-size)" line-height="var(--base-line-height)" color="var(--base-text-color)" align="left" />

  <mj-class name="text-bold" font-weight="bold" />

  <mj-class name="text-uppercase" text-transform="uppercase" />

  <mj-class name="padding-top" padding-top="var(--spacing-small)" />

  <mj-class name="padding-bottom" padding-bottom="var(--spacing-small)" />

  <mj-class name="button" target="_blank" rel="noopener" background-color="var(--button-bg-color)" color="var(--button-text-color)" font-size="16px" line-height="20px" font-weight="bold" font-family="var(--base-font-family)" border-radius="4px" width="166px" padding="0" inner-padding="12px 20px" vertical-align="middle" />

  <mj-class name="card" padding="5.5%" border-radius="10px" />

  <mj-class name="card-purple" background-color="var(--color-purple)" background-url="https://raw.githubusercontent.com/monsara/email-assets/refs/heads/main/images/purple-lighting.png" background-repeat="no-repeat" background-position-x="112%" background-size="150px 140%" />

  <mj-class name="card-title" padding="0" font-size="17px" line-height="17px" font-weight="900" text-transform="uppercase" font-weight="bold" />

  <mj-class name="card-text" padding="0" font-size="16px" line-height="24px" font-weight="bold" text-transform="uppercase" color="var(--white-text-color)" />

  <mj-class name="card-image" src="https://raw.githubusercontent.com/monsara/email-assets/refs/heads/main/images/money-bag-crop.png" alt="Зображення мішка з грошима" padding="10px 0 0" width="60px" />

  <mj-class name="footer-text" padding="0" font-size="14px" line-height="18px" font-weight="bold" color="var(--base-text-color)" align="center" />
</mj-attributes>